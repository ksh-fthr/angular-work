{
  "git.ignoreLimitWarning": true,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,

  // editor
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.insertSpaces": true,
  "editor.wordWrap": "off",
  "editor.autoIndent": true,
  "editor.matchBrackets": true,

  // html
  "html.format.wrapLineLength": 0,
  "html.format.enable": false,
  "html.format.endWithNewline": true,
  "html.format.indentInnerHtml": true,
  "html.suggest.html5": true,
  "html.format.wrapAttributes": "preserve",

  // typescript, javascript
  "javascript.preferences.quoteStyle": "single",
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "tslint.configFile": "./tslint.json",
  "tslint.alwaysShowRuleFailuresAsWarnings": true,

  // --------------------------------------------------------------
  // ファイル保存時に tslint.json のルールに則って自動整形する
  // --------------------------------------------------------------
  // エディタの自動整形機能は Off にしておく
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  // 下記の [1], [2] いずれかが設定されていれば良い
  // [1] TSLint の設定 ( https://marketplace.visualstudio.com/items?itemName=ms-vscode.vscode-typescript-tslint-plugin ) が必要
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  // [2] TSLint(deprecated) の設定 ( https://marketplace.visualstudio.com/items?itemName=eg2.tslint ) が必要
  "tslint.autoFixOnSave": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#fa1b49",
    "activityBar.activeBorder": "#155e02",
    "activityBar.background": "#fa1b49",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#155e02",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#dd0531",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#fa1b49",
    "titleBar.activeBackground": "#dd0531",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#dd053199",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#dd0531"
}
